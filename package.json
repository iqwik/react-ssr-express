{
  "name": "react-ssr-express",
  "version": "1.0.0",
  "description": "React-SSR-Express",
  "private": true,
  "scripts": {
    "build-client": "cross-env NODE_ENV=production webpack --config config/webpack.client.js",
    "build-server": "cross-env NODE_ENV=production webpack --config config/webpack.server.js",
    "build-lib": "babel -d lib --extensions \".ts,.tsx\" ./src",
    "build": "rimraf ./dist ./lib && yarn build-client && yarn build-server && yarn build-lib",
    "start": "node lib/server/index.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "watch": "rimraf ./dist && concurrently \"yarn watch-client\" \"yarn watch-server\" \"yarn watch-lib\"",
    "watch-client": "webpack --config config/webpack.client.js --watch",
    "watch-server": "webpack --config config/webpack.server.js --watch",
    "watch-lib": "concurrently -k \"tsc -w --module commonjs\" \"nodemon ./lib/server/index.js\""
  },
  "author": "Artem Zubarev (https://iqwik.ru)",
  "license": "MIT",
  "dependencies": {
    "@loadable/component": "^5.15.2",
    "@loadable/server": "^5.15.2",
    "express": "^4.17.3",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router": "^5.2.0",
    "react-router-dom": "^5.2.0",
    "sass-loader": "^12.6.0",
    "serialize-javascript": "^6.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.17.6",
    "@babel/core": "^7.17.5",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-react": "^7.16.7",
    "@babel/preset-typescript": "^7.16.7",
    "@loadable/babel-plugin": "^5.13.2",
    "@loadable/webpack-plugin": "^5.15.2",
    "@types/compression": "^1.7.2",
    "@types/express": "^4.17.13",
    "@types/html-minifier": "^4.0.2",
    "@types/loadable__component": "^5.13.4",
    "@types/loadable__server": "^5.12.6",
    "@types/node": "^17.0.21",
    "@types/react": "^17.0.39",
    "@types/react-dom": "^17.0.13",
    "@types/react-router": "^5.1.8",
    "@types/react-router-dom": "^5.1.5",
